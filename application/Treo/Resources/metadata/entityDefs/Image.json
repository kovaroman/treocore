{
  "fields": {
    "name": {
      "type": "varchar",
      "required": true,
      "trim": true,
      "layoutMassUpdateDisabled": true,
      "view": "treo-core:views/fields/image-code-name"
    },
    "description": {
      "type": "text"
    },
    "alt": {
      "type": "varchar",
      "trim": true
    },
    "imageLink": {
      "type": "url",
      "required": true
    },
    "imageFile": {
      "type": "image",
      "previewSize": "small",
      "required": true,
      "layoutMassUpdateDisabled": true,
      "view": "treo-core:views/fields/remote-image"
    },
    "mimeType": {
      "type": "varchar",
      "trim": true,
      "readOnly": true
    },
    "width": {
      "type": "int",
      "readOnly": true
    },
    "height": {
      "type": "int",
      "readOnly": true
    },
    "size": {
      "type": "float",
      "readOnly": true
    },
    "createdAt": {
      "type": "datetime",
      "readOnly": true
    },
    "modifiedAt": {
      "type": "datetime",
      "readOnly": true
    },
    "createdBy": {
      "type": "link",
      "readOnly": true,
      "view": "views/fields/user"
    },
    "modifiedBy": {
      "type": "link",
      "readOnly": true,
      "view": "views/fields/user"
    },
    "assignedUser": {
      "type": "link",
      "required": true,
      "view": "views/fields/assigned-user"
    },
    "teams": {
      "type": "linkMultiple",
      "view": "views/fields/teams"
    },
    "imagesMultiple": {
      "layoutListDisabled": true,
      "layoutMassUpdateDisabled": true,
      "type": "attachmentMultiple",
      "required": true,
      "sourceList": []
    },
    "type": {
      "type": "enum",
      "required": true,
      "options": [
        "File",
        "Files",
        "Link"
      ],
      "default": "File",
      "layoutMassUpdateDisabled": true
    },
    "state": {
      "type": "enum",
      "required": true,
      "options": [
        "uploaded",
        "processed"
      ],
      "optionColors": {
        "uploaded": "FFE900",
        "processed": "00FF37"
      },
      "default": "uploaded",
      "isSorted": false,
      "layoutMassUpdateDisabled": true
    }
  },
  "links": {
    "imageFile": {
      "type": "belongsTo",
      "entity": "Attachment",
      "skipOrmDefs": true
    },
    "createdBy": {
      "type": "belongsTo",
      "entity": "User"
    },
    "modifiedBy": {
      "type": "belongsTo",
      "entity": "User"
    },
    "assignedUser": {
      "type": "belongsTo",
      "entity": "User"
    },
    "teams": {
      "type": "hasMany",
      "entity": "Team",
      "relationName": "EntityTeam",
      "layoutRelationshipsDisabled": true
    }
  },
  "collection": {
    "sortBy": "createdAt",
    "asc": false
  },
  "indexes": {
    "name": {
      "columns": [
        "name",
        "deleted"
      ]
    },
    "assignedUser": {
      "columns": [
        "assignedUserId",
        "deleted"
      ]
    }
  }
}